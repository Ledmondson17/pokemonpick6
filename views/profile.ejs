<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <span id="user"> <%= user._id %></span>
                        <strong>UserName</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>Pending Orders</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].complete %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Completed Orders</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>
<div class="stats">
  <ul>
    <li>Location: <span id="location"><%= user.stats.location %></span></li>
    <li>Bday Month: <span id="month"><%= user.stats.month %></span></li>
    <li>Favorite Color: <span id="color"><%= user.stats.color %></span></li>
    <li>Personality: <span id="personality"><%= user.stats.personality %></span></li>
    <li>Activity 1: <span id="activity1"><%= user.stats.activity1 %></span></li>
    <li>Activity 2: <span id="activity2"><%= user.stats.activity2 %></span></li>
  </ul>
</div>

<section class="containerTwo">
    <h1>Your Team:</h1>
    <section class="poke1 pokemonDisplay">

    </section>
    <section class="poke2 pokemonDisplay">

    </section>
    <section class="poke3 pokemonDisplay">

    </section>
    <section class="poke4 pokemonDisplay">

    </section>
    <section class="poke5 pokemonDisplay">

    </section>
    <section class="poke6 pokemonDisplay">

    </section>
    <button id="save">Save</button>
  </section>

<script src="main.js"></script>

</body>
</html>
